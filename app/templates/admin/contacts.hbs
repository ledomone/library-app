<h1>Contacts</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Message</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |contact|}}
      <tr>
        <td>{{contact.email}}</td>
        <td>{{contact.message}}</td>
        <td><button type="submit" class="btn btn-xs btn-danger" {{action 'deleteContact' contact}}>Delete</button></td>
      </tr>
      {{else}}
        <tr>
          <td colspan="2">
            <i>No contacts yet.</i>
          </td>
        </tr>
    {{/each}}
  </tbody>
</table>
